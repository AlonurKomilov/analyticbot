# Frontend Environment Variables
# Copy this file to .env and update with actual values

# ==========================================
# üåê API CONFIGURATION
# ==========================================
# API Base URL - Backend FastAPI server
# Development: http://localhost:8000
# Production: https://api.your-domain.com
VITE_API_BASE_URL=http://localhost:8000

# API Timeout (milliseconds)
VITE_API_TIMEOUT=10000

# ==========================================
# üì± APP CONFIGURATION
# ==========================================
VITE_APP_NAME="AnalyticBot"
VITE_APP_VERSION=1.0.0

# Debug Mode (set to false for production)
VITE_DEBUG=false

# ==========================================
# üé® UI CONFIGURATION
# ==========================================
# UI Theme
VITE_THEME=light

# ==========================================
# üîê STRIPE CONFIGURATION
# ==========================================
# Stripe Configuration
# Development: Use test keys (pk_test_...)
# Production: Use live keys (pk_live_...)
VITE_STRIPE_PUBLISHABLE_KEY=pk_test_your_stripe_publishable_key_here
VITE_STRIPE_TEST_MODE=true

# ==========================================
# üí≥ PAYMENT UI CONFIGURATION
# ==========================================
# Feature flags for payment system
VITE_PAYMENT_ENABLED=true
VITE_SUBSCRIPTION_ENABLED=true
VITE_TRIAL_ENABLED=true

# Default trial period (in days)
VITE_DEFAULT_TRIAL_DAYS=14

# Supported currencies
VITE_SUPPORTED_CURRENCIES=USD,EUR,GBP

# ==========================================
# üîç ANALYTICS & MONITORING (Optional)
# ==========================================
# Google Analytics (optional)
VITE_GA_TRACKING_ID=

# Sentry for frontend error tracking (optional)
VITE_SENTRY_DSN=

# ==========================================
# üåç INTERNATIONALIZATION (Optional)
# ==========================================
VITE_DEFAULT_LANGUAGE=en
VITE_SUPPORTED_LANGUAGES=en,es,fr,de,ru,uz
