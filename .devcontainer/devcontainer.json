{
  "name": "Analytic Bot Codespace",
  "image": "mcr.microsoft.com/devcontainers/python:3.11",
  "features": {
    "ghcr.io/devcontainers/features/docker-in-docker:2": {
      "version": "latest"
    }
  },
  "postCreateCommand": "pipx install poetry && poetry --version",
  "postStartCommand": "poetry install",
  "customizations": {
    "vscode": {
      "extensions": [
        "ms-azuretools.vscode-docker",
        "ms-python.python",
        "ms-python.vscode-pylance"
      ]
    }
  },
  "forwardPorts": [8000],
  "portsAttributes": {
    "8000": { "label": "API", "onAutoForward": "openBrowser" }
  }
}
