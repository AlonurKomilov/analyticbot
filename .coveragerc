# Coverage.py Configuration
# Created: Oct 20, 2025
# Purpose: Track test coverage across apps, core, and infra layers

[run]
source = apps,core,infra
omit =
    # Test files
    */tests/*
    */test_*.py
    */*_test.py
    
    # Migrations and scripts
    */alembic/*
    */migrations/*
    scripts/*
    
    # Virtual environments
    .venv/*
    venv/*
    env/*
    
    # Build and distribution
    build/*
    dist/*
    *.egg-info/*
    
    # Archive and legacy code
    archive/*
    docs/_archive/*
    
    # Configuration files
    */config.py
    */settings.py
    
    # Frontend
    apps/frontend/*
    
    # Demo apps (not production code)
    apps/demo/*

branch = True
parallel = False
concurrency = thread,greenlet

[report]
# Reporting options
precision = 2
show_missing = True
skip_covered = False
skip_empty = True
sort = Cover

# Exclude lines from coverage
exclude_lines =
    # Standard pragmas
    pragma: no cover
    
    # Debug-only code
    def __repr__
    def __str__
    
    # Abstract methods
    raise NotImplementedError
    @abstractmethod
    @abc.abstractmethod
    
    # Type checking
    if TYPE_CHECKING:
    if typing.TYPE_CHECKING:
    
    # Defensive programming
    assert False
    raise AssertionError
    
    # Platform-specific
    if __name__ == .__main__.:
    if sys.platform
    
    # Deprecated code
    @deprecated
    warnings.warn
    
    # Pass statements in protocols/interfaces
    \.\.\.

[html]
directory = htmlcov
title = AnalyticBot Test Coverage Report
show_contexts = True

[json]
output = coverage.json
pretty_print = True
show_contexts = True

[paths]
source =
    apps/
    core/
    infra/
