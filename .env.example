# --- runtime / bot ---
BOT_TOKEN=replace_me
ADMIN_IDS=123456789
DEFAULT_LOCALE=en
STORAGE_CHANNEL_ID=-1000000000000

# --- postgres ---
# These variables are used to construct the DATABASE_URL if it's not set explicitly.
POSTGRES_HOST=postgres
POSTGRES_PORT=5432
POSTGRES_USER=analytic
POSTGRES_PASSWORD=change_me
POSTGRES_DB=analytic_bot

# --- URLs / ports ---
# The application uses the asyncpg driver, while Alembic uses psycopg2.
# The `alembic/env.py` script automatically reads this environment variable.
# Example for local development and CI:
DATABASE_URL=postgresql+asyncpg://analytic:change_me@localhost:5432/analytic_bot

REDIS_URL=redis://redis:6379/0

API_HOST=0.0.0.0
API_PORT=8000
API_HOST_URL=http://localhost:8000

# Telegram Web App **must** be a secure (HTTPS) URL.
# Use a real HTTPS URL from a service like ngrok, Codespaces, or Vercel.
WEBAPP_URL=https://your-public-https-host.example/

TWA_HOST_URL=http://localhost:5173

# --- feature flags / misc ---
ENFORCE_PLAN_LIMITS=True
SENTRY_DSN=
