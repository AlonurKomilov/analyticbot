{
  "name": "Analytic Bot Codespace",
  "image": "mcr.microsoft.com/devcontainers/python:3.11",

  // Codespace ochilgach avtomatik ishlaydigan buyruqlar:
  "postCreateCommand": "pipx install poetry && poetry config virtualenvs.in-project true && poetry install --no-root",

  "customizations": {
    "vscode": {
      "extensions": [
        "ms-python.python",
        "ms-python.vscode-pylance"
      ],
      "settings": {
        // VS Code to‘g‘ri interpreterni oladi
        "python.defaultInterpreterPath": "${workspaceFolder}/.venv/bin/python",
        "python.terminal.activateEnvironment": true,

        // Intellisense yaxshilash
        "python.analysis.autoImportCompletions": true,
        "python.analysis.extraPaths": ["${workspaceFolder}"]
      }
    }
  }
}
