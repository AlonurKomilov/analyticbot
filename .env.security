# ðŸ”’ SECURITY ENVIRONMENT CONFIGURATION
# Copy this to .env and update values for production

# JWT Configuration
JWT_SECRET_KEY=your-super-secret-jwt-key-change-in-production-min-32-chars
JWT_REFRESH_SECRET_KEY=your-refresh-secret-key-change-in-production-min-32-chars

# Redis Configuration
REDIS_HOST=localhost
REDIS_PORT=6379
REDIS_DB=0
REDIS_PASSWORD=

# OAuth Configuration (Optional - for OAuth 2.0 features)
GOOGLE_CLIENT_ID=your-google-client-id
GOOGLE_CLIENT_SECRET=your-google-client-secret
GITHUB_CLIENT_ID=your-github-client-id
GITHUB_CLIENT_SECRET=your-github-client-secret
OAUTH_REDIRECT_URL=http://localhost:8006/security/oauth/callback

# Email Configuration (Optional - for email verification)
SMTP_SERVER=smtp.gmail.com
SMTP_PORT=587
SMTP_USERNAME=your-email@gmail.com
SMTP_PASSWORD=your-app-password
EMAIL_FROM=noreply@analyticbot.com

# Encryption (Optional - for additional data encryption)
ENCRYPTION_KEY=your-32-byte-encryption-key-for-sensitive-data
