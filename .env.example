# ============================================================================
# ANALYTICBOT ENVIRONMENT CONFIGURATION TEMPLATE
# Copy this file to .env and update all values marked with CHANGE_ME
# ============================================================================

# ============================================================================
# CORE APPLICATION
# ============================================================================
ENVIRONMENT=development
DEBUG=true

# ============================================================================
# TELEGRAM BOT CONFIGURATION
# ============================================================================
BOT_TOKEN=CHANGE_ME_BOT_TOKEN_FROM_BOTFATHER
STORAGE_CHANNEL_ID=CHANGE_ME_CHANNEL_ID
ADMIN_IDS=CHANGE_ME_COMMA_SEPARATED_USER_IDS

# Localization
SUPPORTED_LOCALES=en,uz
DEFAULT_LOCALE=en

# ============================================================================
# DATABASE CONFIGURATION
# ============================================================================
POSTGRES_HOST=localhost
POSTGRES_PORT=5432
POSTGRES_USER=analyticbot
POSTGRES_PASSWORD=CHANGE_ME_STRONG_PASSWORD
POSTGRES_DB=analyticbot_db

# Optional: Full connection URL (overrides above if provided)
# For local development:
# DATABASE_URL=postgresql+asyncpg://analyticbot:password@localhost:5432/analyticbot_db
# For Docker containers:
# DATABASE_URL=postgresql+asyncpg://analyticbot:password@postgres:5432/analyticbot_db

# Redis for caching and session storage
REDIS_URL=redis://localhost:6379/0

# Database connection pool settings
DB_POOL_SIZE=10
DB_MAX_OVERFLOW=20
DB_POOL_TIMEOUT=30

# ============================================================================
# API & WEB APPLICATION
# ============================================================================
API_HOST=0.0.0.0
API_PORT=8000
API_HOST_URL=http://localhost:8000

# Telegram Web App frontend URL (must be HTTPS in production)
TWA_HOST_URL=CHANGE_ME_FRONTEND_URL

# CORS allowed origins (comma-separated for multiple)
CORS_ORIGINS=*

# ============================================================================
# SECURITY & AUTHENTICATION
# ============================================================================
# JWT Secret (generate with: openssl rand -hex 32)
JWT_SECRET_KEY=CHANGE_ME_RANDOM_32_BYTE_HEX_STRING

# JWT configuration
JWT_ALGORITHM=HS256
JWT_ACCESS_TOKEN_EXPIRE_MINUTES=30
JWT_REFRESH_TOKEN_EXPIRE_DAYS=7

# Password hashing rounds (higher = more secure, slower)
PASSWORD_HASH_ROUNDS=12

# Rate limiting
RATE_LIMIT_PER_MINUTE=60

# ============================================================================
# PAYMENT GATEWAYS
# ============================================================================

# Stripe (if used)
STRIPE_SECRET_KEY=CHANGE_ME_STRIPE_SECRET_KEY
STRIPE_WEBHOOK_SECRET=CHANGE_ME_STRIPE_WEBHOOK_SECRET

# PayMe (Uzbekistan payment system)
PAYME_SECRET_KEY=CHANGE_ME_PAYME_SECRET_KEY

# Click (Uzbekistan payment system)  
CLICK_SECRET_KEY=CHANGE_ME_CLICK_SECRET_KEY

# ============================================================================
# MONITORING & LOGGING
# ============================================================================
LOG_LEVEL=INFO
LOG_FORMAT=text
LOG_FILE=

# Error tracking (optional)
SENTRY_DSN=

# Prometheus metrics
PROMETHEUS_ENABLED=true
PROMETHEUS_PORT=9090

# ============================================================================
# FEATURE FLAGS
# ============================================================================
ENFORCE_PLAN_LIMITS=true

# ============================================================================
# EXTERNAL SERVICES
# ============================================================================
OPENAI_API_KEY=CHANGE_ME_OPENAI_API_KEY
SMTP_HOST=
SMTP_PORT=587
SMTP_USER=
SMTP_PASSWORD=
SMTP_USE_TLS=True
SMTP_FROM_EMAIL=no-reply@example.com

