{
  "name": "Analytic Bot Codespace",
  "image": "mcr.microsoft.com/devcontainers/python:3.11",

  // Docker-in-Docker: dockerd ni konteyner ichida ishga tushiradi
  "features": {
    "ghcr.io/devcontainers/features/docker-in-docker:2": {
      "moby": true
    }
  },

  // Ishga tushgach Poetry o‘rnatish + userni docker guruhiga qo‘shish
  "postCreateCommand": "pipx install poetry && poetry config virtualenvs.in-project true && poetry install --no-root && sudo usermod -aG docker $USER || true",

  "customizations": {
    "vscode": {
      "extensions": [
        "ms-python.python",
        "ms-python.vscode-pylance",
        "ms-azuretools.vscode-docker"
      ],
      "settings": {
        "python.defaultInterpreterPath": "${workspaceFolder}/.venv/bin/python",
        "python.terminal.activateEnvironment": true,
        "python.analysis.autoImportCompletions": true,
        "python.analysis.extraPaths": ["${workspaceFolder}"]
      }
    }
  },

  // Foydali portlar (ixtiyoriy): API, Postgres, Redis
  "forwardPorts": [8000, 5432, 6379],

  // Docker ma'lumotlarini konteyner ichida saqlash uchun nomli volume (rebuildlarda saqlanadi)
  "mounts": [
    "source=dind-var-lib-docker,target=/var/lib/docker,type=volume"
  ]
}
